{
    "name": "arcana",
    "version": "1.0.0",
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "typescript": "catalog:"
    },
    "scripts": {
        "dev": "bun --filter '*' dev",
        "build": "bun --filter '*' build",
        "lint": "bun run types; biome check && bun --filter '*' lint",
        "types": "[ -d packages/sdk/asana/dist ] || bun --filter '*' types",
        "preview": "bun --filter '*' preview",
        "format": "biome format --write",
        "clean": "bun run clean:packages && bun run clean:npm",
        "clean:packages": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
        "clean:npm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
    },
    "workspaces": [
        "packages/web",
        "packages/tools/*",
        "packages/sdk/*",
        "packages/doc-gen"
    ],
    "catalog": {
        "@biomejs/biome": "2.2.6",
        "@convex-dev/agent": "0.2.10",
        "@types/node": "24.7.2",
        "ai": "5.0.68",
        "typescript": "5.9.2",
        "zod": "4.1.12"
    }
}
