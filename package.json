{
    "name": "arcana",
    "version": "1.0.0",
    "devDependencies": {
        "@types/node": "24.5.2",
        "typescript": "5.9.2"
    },
    "scripts": {
        "dev": "bun --filter '*' dev",
        "build": "bun --filter '*' build",
        "lint": "bun --filter '*' lint",
        "types": "bun --filter '*' types",
        "preview": "bun --filter '*' preview",
        "format": "biome format --write",
        "clean": "bun run clean:packages && bun run clean:npm",
        "clean:packages": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
        "clean:npm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
    },
    "workspaces": [
        "packages/web",
        "packages/tools/*",
        "packages/sdk/*",
        "packages/doc-gen"
    ]
}
